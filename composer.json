{
    "name": "laravel-blaze/builder",
    "description": "Blaze Laravel Builder - A smart build system for Laravel apps",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Akram Hossain Tuhin",
            "email": "tuhin1191@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Blaze\\Builder\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Blaze\\Builder\\BlazeServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan vendor:publish --tag=blaze-config --force"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "packages/blaze/builder"
        }
    ],
    "require": {
        "blaze/builder": "^1.0"
    }
}